public double getCurrent_radian() {
	return parent_radian;
}
	public double getTheta() {
		return theta;
	}

	public void setTheta(double theta) {
		this.theta = theta;
	}

	public int getBoneLength() {
		return boneLength;
	}

	public void setBoneLength(int boneLength) {
